<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bubble_out"
                android:foreground="@drawable/bubble_in_ripple"
                android:longClickable="true"
                android:padding="8dp">

    <TextView
        android:id="@+id/bubble_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/bubble_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/bubble_text_content"
        android:layout_below="@id/bubble_text_content"
        android:minWidth="40dp"/>
</RelativeLayout>